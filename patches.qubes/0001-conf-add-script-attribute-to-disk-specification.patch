From 889cfe39db9b5c5a198bf7ed778a231758ad68c5 Mon Sep 17 00:00:00 2001
From: Marek Marczykowski <marmarek@invisiblethingslab.com>
Date: Fri, 5 Apr 2013 01:37:29 +0200
Subject: [PATCH 01/12] conf: add 'script' attribute to disk specification
MIME-Version: 1.0
Content-Type: text/plain; charset=UTF-8
Content-Transfer-Encoding: 8bit
Organization: Invisible Things Lab
Cc: Marek Marczykowski-Górecki <marmarek@invisiblethingslab.com>

Script to be called to prepare custom device for domain. Done with Xen
in mind, it maps to libxl_device_disk.script.

XML configuration would be:
<disk type='block' device='disk'>
    <source dev='/dev/mapper/custom-device'/>
    <script path='/script/to/setup/custom-device'/>
    <target dev='xvdc'/>
</disk>

Signed-off-by: Marek Marczykowski-Górecki <marmarek@invisiblethingslab.com>
---
 docs/schemas/domaincommon.rng | 8 ++++++++
 src/conf/domain_conf.c        | 9 +++++++++
 src/conf/domain_conf.h        | 1 +
 3 files changed, 18 insertions(+)

diff --git a/docs/schemas/domaincommon.rng b/docs/schemas/domaincommon.rng
index f196177..91414b9 100644
--- a/docs/schemas/domaincommon.rng
+++ b/docs/schemas/domaincommon.rng
@@ -1083,6 +1083,14 @@
         </element>
       </optional>
       <optional>
+        <element name="script">
+          <attribute name="path">
+            <ref name="filePath"/>
+          </attribute>
+          <empty/>
+        </element>
+      </optional>
+      <optional>
         <element name="readonly">
           <empty/>
         </element>
--- a/src/conf/domain_conf.c	2016-06-04 16:19:09.000000000 +0300
+++ b/src/conf/domain_conf.c	2016-07-20 21:53:31.109000000 +0300
@@ -1559,6 +1559,7 @@
     VIR_FREE(def->vendor);
     VIR_FREE(def->product);
     VIR_FREE(def->domain_name);
+    VIR_FREE(def->script);
     virDomainDeviceInfoClear(&def->info);
     virObjectUnref(def->privateData);
 
@@ -7251,6 +7252,7 @@
     char *vendor = NULL;
     char *product = NULL;
     char *domain_name = NULL;
+    char *script = NULL;
     int expected_secret_usage = -1;
     int auth_secret_usage = -1;
 
@@ -7320,6 +7322,9 @@
         } else if (!domain_name &&
                    xmlStrEqual(cur->name, BAD_CAST "backenddomain")) {
             domain_name = virXMLPropString(cur, "name");
+        } else if (!script &&
+                xmlStrEqual(cur->name, BAD_CAST "script")) {
+            script = virXMLPropString(cur, "path");
         } else if (xmlStrEqual(cur->name, BAD_CAST "geometry")) {
             if (virDomainDiskDefGeometryParse(def, cur, ctxt) < 0)
                 goto error;
@@ -7619,6 +7624,8 @@
     encryption = NULL;
     def->domain_name = domain_name;
     domain_name = NULL;
+    def->script = script;
+    script = NULL;
     def->serial = serial;
     serial = NULL;
     def->wwn = wwn;
@@ -7656,6 +7663,7 @@
     VIR_FREE(vendor);
     VIR_FREE(product);
     VIR_FREE(domain_name);
+    VIR_FREE(script);
 
     ctxt->node = save_ctxt;
     return def;
@@ -19466,6 +19474,7 @@
         return -1;
 
     virBufferEscapeString(buf, "<backenddomain name='%s'/>\n", def->domain_name);
+    virBufferEscapeString(buf, "<script path='%s'/>\n", def->script);
 
     virDomainDiskGeometryDefFormat(buf, def);
     virDomainDiskBlockIoDefFormat(buf, def);
diff --git a/src/conf/domain_conf.h b/src/conf/domain_conf.h
index a101e2a..b8e79f9 100644
--- a/src/conf/domain_conf.h
+++ b/src/conf/domain_conf.h
@@ -731,6 +731,7 @@ struct _virDomainDiskDef {
     int discard; /* enum virDomainDiskDiscard */
     unsigned int iothread; /* unused = 0, > 0 specific thread # */
     char *domain_name; /* backend domain name */
+    char *script;
 };
 
 
